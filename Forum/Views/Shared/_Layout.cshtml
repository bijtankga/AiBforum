<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <title>AIB Forum</title>
    <meta name="description" content="">

    <meta name="viewport" content="width=device-width">



    <link rel="stylesheet" href="~/Content/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/normalize.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/animate.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/templatemo_misc.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/templatemo_style.css" type="text/css" />



</head>
<body>
    <div id="front">
        <div class="site-header">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-6 col-xs-6">
                        <div>
                            <h1><a href="https://localhost:44362/Forum/Index">AiB Forum</a></h1>
                        </div> <!-- /.logo -->
                    </div> <!-- /.col-md-4 -->

                    <div class="col-md-8 col-sm-6 col-xs-6">
                        <a href="#" class="toggle-menu"><i class="fa fa-bars"></i></a>

                        @Html.Partial("_LoginPartial")
                    </div> <!-- /.col-md-8 -->
                </div> <!-- /.row -->

            </div> <!-- /.container -->
        </div> <!-- /.site-header -->
    </div> <!-- /#front -->
    

    <div class="container body-content">
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year — nasze forum AiB</p>

            @if (Session["StartTime"] != null)
            {
            <p>Jesteś zalogowany przez minut: @((DateTime.Now - (DateTime)Session["StartTime"]).Minutes)</p>
            }
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
